    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <title>Bài Tập LAB04</title>
  </head>
  <body>
    <div class="container">
      <h3 style="text-align:center; padding: 10px;">Thông tin Lớp Học</h3>
      <form action="/save" method="post" , enctype="multipart/form-data">
        <div class="form-group">id</label>
          <input
            type="text"
            class="form-control"
            name="id"
            id="id"
            placeholder="Nhập id"
          />
        </div>
        <div class="form-group">name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="Nhập name "
          />
        </div>
        <div class="form-group">
          <label for="course_type">course_type</label>
          <input
            type="text"
            class="form-control"
            id="course_type"
            name="course_type"
            placeholder="Nhập course_type"
          />
        </div>
        <div class="form-group">
          <label for="semester">semester</label>
          <input
            type="text"
            class="form-control"
            id="semester"
            name="semester"
            placeholder="Nhập semester"
          />
        </div>
        <div class="form-group">
          <label for="department">department </label>
          <input
            type="text"
            class="form-control"
            id="department"
            name="department"
            placeholder="Nhập department"
          />
        </div>

        <div class="form-group">
          <label for="fileimage">choose a file</label>
          <input type="file" name="fileimage"  id="fileimage" accept="image/*"  />
        </div>


          <button type="submit" >Submit</button>


      </form>

      <br>
      <h3 style="text-align:center;">Danh Sách Lớp Học</h3>

     <form action="/delete" method="post" enctype="multipart/form-data">
      <table border="true">
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Course_type</th>
            <th scope="col">Semester</th>
            <th scope="col">Department</th>
            <th scope="col">Image</th>
            <th scope="col">Check</th>

          </tr>
         <% data.forEach(item => { %>
            <tr>
              <td class="th_item"><%= item.id %></td>
              <td class="th_item"><%= item.name %></td>
              <td class="th_item"><%= item.course_type %></td>
              <td class="th_item"><%= item.semester %></td>
              <td class="th_item"><%= item.department %></td>
              <td class="th_item"><img src="<%= item.image %>" alt="image" style="width:150px; height:150px;"></td>
               <td class="th_item">
                <input type="checkbox" id="<%= item.id %>" name="<%= item.id %>" value="<%= item.id%>" >
              </td>
            </tr>
          <% }); %>
      </table>



        <!-- Các trường và nút khác trong biểu mẫu của bạn -->
        <div class="text-center">
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </form>

      <br>


    </div>
 <script>
    document.getElementById('classForm').addEventListener('submit', function(event) {
        var id = document.getElementById('id').value.trim();
        var name = document.getElementById('name').value.trim();
        var semester = document.getElementById('semester').value.trim();
        var fileimage = document.getElementById('fileimage').value.trim();

        // Kiểm tra xem ID và Name có được nhập hay không
        if (id === '' || name === '') {
            alert('Vui lòng nhập ID và Name.');
            event.preventDefault(); // Ngăn chặn việc submit form
            return;
        }

        // Kiểm tra xem Semester có là số lớn hơn 0 hay không
        if (isNaN(semester) || parseInt(semester) <= 0) {
            alert('Semester phải là một số lớn hơn 0.');
            event.preventDefault(); // Ngăn chặn việc submit form
            return;
        }

        // Kiểm tra xem đã chọn file ảnh hay chưa
        if (fileimage === '') {
            alert('Vui lòng chọn một file ảnh.');
            event.preventDefault(); // Ngăn chặn việc submit form
            return;
        }
    });
</script>

  </body>
 
</html>